<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head') -%>
        <title>Add Akash GO Channel</title>
</head>

<body>
    <%- include('header') %>
    <div class="container">
        <section class="account-settings">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="content-settings">
                            <h2 class="block-title">You can add Akash Go MPD-</h2>
                            <div class="tab-content" id="pills-tabContent">
                                <div id="pills-profile" class="tab-pane animated fadeInRight show active">
                                    <!-- Start Form -->
                                    <form id="profile-settings-form" action="" method="post">
                                        <div class="error-container"></div>
                                        <h5 class="mb-3 mt-3 pb-3 section-border">Channel Information</h5>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Channel Name</label>
                                                    <input class="form-control form-control-name" name="channel_name" id="username" type="text" placeholder="Enter Channel Name">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Mpd Address</label>
                                                    <input type="text" class="form-control" name="stream" placeholder="Mpd Channel Stream">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>k value</label>
                                                    <input type="text" class="form-control" name="k" placeholder="Enter 'K' Value">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>kid value</label>
                                                    <input type="text" class="form-control" name="kid" placeholder="Enter 'KId' Value">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                        </div>
                                        <!-- Row End -->
                                        <div class="row">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Logo</label>
                                                    <input class="form-control form-control-name" name="logo" id="last-name" type="text" placeholder="Channel logo url">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Category</label>
                                                    <select class="form-control form-control-name" name="category" id="category">
                                                        <option value=""></option>
                                                        <option value="Live">Live</option>
                                                        <option value="News">News</option>
                                                        <option value="Sports">Sports</option>
                                                        <option value="Entertainment">Entertainment</option>
                                                        <option value="Music">Music</option>
                                                        <option value="Kids">Kids</option>
                                                        <option value="Movie">Movie</option>
                                                        <option value="Documentory">DOCUMENTORY</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Type</label>
                                                    <input type="text" class="form-control" name="type" placeholder="Enter the stream type" value="mpd">
                                                </div>
                                            </div>
                                            <!-- Col End -->
                                        </div>
                                        <!-- Row End -->
                                        
                                        <div class="form-group d-flex align-items-center mt-3">
                                            <input type="submit" class="hvr-sweep-to-right btn btn-primary" value="Add Channel">
                                        </div>
                                    </form>
                                    <!-- Form End -->
                                </div>
                            </div>
                        </div>
                        <!-- Content Settings End -->
                    </div>
                    <!-- Col End -->
                </div>
                <!-- Row End -->
            </div>
            <!-- Container End -->
        </section>
    </div>
    <%- include('footer') %>
    <%- include('jsSection') %>
</body>

</html>